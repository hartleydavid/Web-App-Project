<!-- Comment Section Style -->
<style>
    .comment-section {
        text-align: center;
        margin-top: 20px;
        padding: 20px;
    }

    .comments-list {
        list-style-type: none;
        padding: 0;
    }

    .comments-list li {
        text-align: left;
        margin-bottom: 15px; /* Adjust the whitespace between comments */
        overflow: auto; /* Clear the float to prevent layout issues */
    }

    .comment-text {
        float: left;
        width: 70%;
    }

    .comment-actions {
        float: right;
        width: 30%;
    }

    textarea {
        width: 80%; /* Adjust the size of the comment box */
        margin-bottom: 10px;
    }
</style>

<!-- Comment Section -->
<div class="comment-section">
    <form asp-action="AddComment" method="post">
        <input type="hidden" asp-for="Id" />
        <label for="Comment">Add your comment:</label>
        <br>
        <textarea name="Comment" required></textarea>
        <br>
        <button type="submit">Submit Comment</button>
    </form>

    <br>
    @Html.DisplayNameFor(model => model.Comments)
    @if (Model.Comments != null && Model.Comments.Any())
    {
        <ul class="comments-list">
            @foreach (var comment in Model.Comments)
            {
                <li>
                    <div class="comment-text">
                        @comment.Text 
                    </div>
                    <div class="comment-actions" align="right">
                        <form asp-action="RemoveComment" method="post">
                            <input type="hidden" name="commentId" value="@comment.Id" />
                            <button type="submit">Remove Comment</button>
                        </form>
                    </div>
                </li>
            }
        </ul>
    }
    else
    {
        <p>No comments yet.</p>
    }
</div>


