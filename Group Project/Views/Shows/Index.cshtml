@model IEnumerable<Group_Project.Models.Show>

@{
    ViewData["Title"] = "Index";
}

<h1>Shows</h1>
<style>
    body {
        height: 100%;
        vertical-align: middle;
    }

    .container {
        display: grid;
        position: relative;
        width: 100%;
        grid-template-columns: repeat(4, minmax(300px, 1fr));
    }

    .showlist {
        position: relative;
        padding: .25em;
    }
    
    .showlist:hover a .overlay {
        opacity: .7;
    }
    img {
        display: block;
        width: 100%;
    }
    
    .showlist a .overlay {
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        height: 100%;
        width: 100%;
        opacity: 0;
        transition: .5s ease;
        background-color: #ba0000;
    }
    .text {
        color: white;
        font-size: 20px;
        position: absolute;
        top: 50%;
        left: 50%;
        -webkit-transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
        transform: translate(-50%, -50%);
        text-align: center;
    }
</style>



<p>
    <a asp-action="RemoveAllRecords">Wipe Database</a> |
</p>

<body>
    <div class="container">
        @foreach (var item in Model)
        {
            <div class="showlist">
                <a href="@Url.Action("Details", new { id = item.Id })">
                    <img src="@Html.DisplayFor(modelItem => item.ImageSrc)" alt="Show Image" width="300" height="400" />
                    <div class="overlay">
                        <div class="text">@Html.DisplayFor(modelItem => item.Title)</div>
                    </div>
                </a>
            </div>
        }
    </div>

</body>

