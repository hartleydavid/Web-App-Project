@model Group_Project.Models.Movie

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
       <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ImageSrc)
        </dt>
        <dd class = "col-sm-10">
              <img src="@Html.DisplayFor(model => model.ImageSrc)" alt="Movie Image" width="600" height="700" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Genre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FormattedReleaseDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BoxOfficeTotal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BoxOfficeTotal)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IMBDScore)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IMBDScore)
        </dd>
        <!-- Add Comment Form -->
        <form asp-action="AddComment" method="post">
            <input type="hidden" asp-for="Id" />
            <label for="Comment">Add your comment:</label>
            <textarea name="Comment" required></textarea>
            <button type="submit">Submit Comment</button>
        </form>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Comments)
        </dt>

       
    </dl>
</div>

@if (Model.Comments != null && Model.Comments.Any())
{
    <ul>
        @foreach (var comment in Model.Comments)
        {
            <li>
                @comment.Text
            </li>
        }
    </ul>
}
else
{
    <p>No comments yet.</p>
}
<div>
    <a asp-action="Index">Back to List</a>
</div>
