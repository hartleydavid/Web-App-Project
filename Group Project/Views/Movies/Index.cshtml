@model IEnumerable<Group_Project.Models.Movie>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="RemoveAllRecords">Wipe Database</a> |
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImageSrc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BoxOfficeTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IMBDScore)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
             <th>
                <a href="@Url.Action("Details", new { id = item.Id })">
                    <img src="@Html.DisplayFor(modelItem => item.ImageSrc)" alt="Movie Image" width="300" height="400" />
                </a>
            </th>

            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FormattedReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BoxOfficeTotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IMBDScore)
            </td>

            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
            </td>

        </tr>
}
    </tbody>
</table>
